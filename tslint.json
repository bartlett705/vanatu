        "no-console": false,
        "semicolon": [true, "never"],
        "trailing-comma": [true, "never"],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template",
            "jsx-double"
        ]
    },
    "rulesDirectory": []
